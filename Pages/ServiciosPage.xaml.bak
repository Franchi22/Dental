<Page x:Class="DentalMVP.Pages.ServiciosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Servicios">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <TextBox x:Name="txtNombre" Width="220" Margin="4"/>
            <TextBox x:Name="txtPrecio" Width="120" Margin="4"/>
            <ComboBox x:Name="cbItbis" Width="120" Margin="4">
                <ComboBoxItem Content="0" IsSelected="True"/>
                <ComboBoxItem Content="18"/>
            </ComboBox>
            <Button Content="Agregar" Click="Add_Click" Margin="4"/>
            <Button Content="Guardar Cambios" Click="Save_Click" Margin="4"/>
        </StackPanel>

        <DataGrid x:Name="dg" AutoGenerateColumns="False" Margin="8" IsReadOnly="False"
                  CanUserAddRows="False" CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Servicio" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Price}" Width="120"/>
                <DataGridTextColumn Header="ITBIS %" Binding="{Binding ItbisPct}" Width="80"/>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Active}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid>
     
    </DockPanel>
</Page>