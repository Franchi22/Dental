<Window x:Class="DentalMVP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blue Dental Clinic"
        Height="720" Width="1180"
        WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="220"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Lateral -->
    <StackPanel Background="#1F2937" Grid.Column="0">
      <TextBlock Text="Dental MVP" Foreground="White" FontSize="22" Margin="16"/>
      <Separator Margin="16,0" Background="#2A3B4E" Height="1"/>

      <!-- Botón de Inicio (NUEVO) -->
      <Button Tag="Inicio" Click="Nav_Click" Margin="12" Padding="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
          <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="16" Margin="0,0,8,0"/>
          <TextBlock Text="Inicio"/>
        </StackPanel>
      </Button>

      <!-- Botones existentes -->
      <Button Content="Pacientes"   Tag="Pacientes"   Click="Nav_Click" Margin="12" Padding="10"/>
      <Button Content="Servicios"   Tag="Servicios"   Click="Nav_Click" Margin="12" Padding="10"/>
      <Button Content="Inventario"  Tag="Inventario"  Click="Nav_Click" Margin="12" Padding="10"/>
      <Button Content="Facturar"    Tag="Facturar"    Click="Nav_Click" Margin="12" Padding="10"/>
      <Button Content="Odontograma" Tag="Odontograma" Click="Nav_Click" Margin="12" Padding="10"/>
    </StackPanel>

    <!-- Área de contenido -->
    <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
  </Grid>
</Window>
